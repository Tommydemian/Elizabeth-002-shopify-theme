<section>
  <div class="three-images-wrapper">
    {% for i in (1..3) %}
      {% assign image_key = 'image' | append: i %}
      {% if section.settings[image_key] != blank %}
        <div class="image-{{i}}-user">
          <h2></h2>
        </div>
      {% else %}
        <div class="image-{{i}}">
          <h2></h2>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<style>
  .image-1,
  .image-2,
  .image-3 {
    width: 33%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }

  .image-1 {
    background-image: url("{{ 'one.png' | asset_url }}");
  }
  .image-2 {
    background-image: url("{{ 'two.png' | asset_url }}");
  }
  .image-3 {
    background-image: url("{{ 'three.png' | asset_url }}");
  }

  .image-1-user {
    background-image: url("{{ section.settings.image1 | image_url }}");
  }
  .image-2-user {
    background-image: url("{{ section.settings.image2 | image_url }}");
  }
  .image-3-user {
    background-image: url("{{ section.settings.image3 | image_url }}");
  }


</style>


{% schema %}
  {
    "name": "Inspiration Collage",
    "settings": [
      {
        "type": "image_picker",
        "id": "image1",
        "label": "Image 1",
        "info": "400 x 120px .png recommended "
      }, {
        "type": "image_picker",
        "id": "image2",
        "label": "Image 2",
        "info": "400 x 120px .png recommended "
      }, {
        "type": "image_picker",
        "id": "image3",
        "label": "Image 3",
        "info": "400 x 120px .png recommended "
      }
    ],
    "presets": [
      {
        "name": "Inspiration Collage"
      }
    ],
    "blocks": []
  }
{% endschema %}