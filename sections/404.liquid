{{ '404.css' | asset_url | stylesheet_tag }}

<h1>{{ section.settings.title }}</h1>
<p>{{ section.settings.description }}</p>

{% schema %}
  {
    "name": "Page Not Found",
    "tag": "section",
    "class": "not-found-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "404",
        "label": "404 Heading Title"
      }, {
        "type": "text",
        "id": "description",
        "default": "The page you looking for is not found",
        "label": "404 Heading Description"
      }
    ]
  }
{% endschema %}